<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeatherApiApp.Views.ToDoListEditAndAddPage">
    <ContentPage.Content>
        <StackLayout>
            <Label HorizontalOptions="CenterAndExpand" Text="Название кота" />
            <Entry Placeholder="Введите имя" Text="{Binding Name}"/>
            <Label HorizontalOptions="CenterAndExpand" Text="Цвет" />
            <Entry Placeholder="Введите цвет" Text="{Binding Color}"/>
            <Switch IsToggled="{Binding Gender}" />
            <Button Clicked="SaveButton_Clicked" Text="Сохранить" />
            <Button Clicked="DeleteButton_Clicked" Text="Удалить" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>